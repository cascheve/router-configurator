<Window x:Class="BetterRouterProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterRouterProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="550">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <TextBox Text="Choose the Baud Rate"/>
        <ComboBox x:Name="baudRateDD">
        </ComboBox>

        <TextBox Text="Choose the Serial Port" />
        <ComboBox x:Name="portNameDD">
        </ComboBox>

    </Grid>
</Window>
